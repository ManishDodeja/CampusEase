<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".After_TimeTable">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/day_monday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            app:srcCompat="@drawable/monday"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Monday"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/day_tuesday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/tuesday"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Tuesday"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/day_wednesday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            app:srcCompat="@drawable/wednesday"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Wednesday"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/day_thursday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            app:srcCompat="@drawable/thursday"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Thursday"

            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/day_friday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            app:srcCompat="@drawable/friday"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Friday"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <ImageButton
            android:id="@+id/day_saturday"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:background="@drawable/round_btn"
            app:srcCompat="@drawable/saturday"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:fontFamily="@font/akaya_telivigala"
            android:gravity="center"
            android:text="Saturday"
            android:textSize="23sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>





</LinearLayout>